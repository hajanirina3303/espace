							{% elseif item == 'ROLE_CONSULTANT' %}
							CONSULTATION
							{% else %}
							MISE A JOUR
							{% endif %}
							{% endfor %}
							</td>
							<td>
								<a class="btn btn-xs btn-danger">{{ include('user_db/_delete_form.html.twig') }}</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-2 offset-5">
            {% if is_granted('ROLE_EDITEUR') %}
