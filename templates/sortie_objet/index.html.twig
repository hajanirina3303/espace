    <div class="card card-maroon">
      <div class="card-header">
        <h3 align="center">
           OBJETS DONS SORTIS ET STOCKS
        </h3>
      </div>
      </br>
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th> Date sortie</th>
            <th> objet </th>
            <th> quantite</th>            
            <th> quantite reste </th>
            <th> sortie</th>
            <th> reste  </th>
            <th> rubrique</th>
             </tr>
        </thead>
        <tbody>
          {% for sortie_objet in sortie_objets %}
            <tr>
              <td>{{ sortie_objet.dateSortie ? sortie_objet.dateSortie|date('d-m-Y'): '' }}
              </td>
              <td>
                {{ sortie_objet.objet.description }}
              </td>

              <td>
                qte au debut {{ sortie_objet.objet.quantite }}
              </td>
              <td>
                qte reste  {{ sortie_objet.objet.getResteQuantite(sortie_objet.id) }}
              </td>              
              <td>
                sortie {{ sortie_objet.uniteObjet }}
              </td>
              <td>
                reste {{ sortie_objet.objet.getResteQuantite(sortie_objet.id) - sortie_objet.uniteObjet }}
              </td>
              <td>
                {{ sortie_objet.objet.rubrique.libellerubrique }}
              </td>
              </tr>
          {% else %}
            <tr>
              <td colspan="4">
                no records found
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
