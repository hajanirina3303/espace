<span class="bg-danger text-center offset-5 col-2">{{ erreur }}</span>
<div class="row col-12">
	<div class="col-4">
	{% if ouvert == 'don' %}
	<div class="card card-fuchsia">
	{% else %}
		<div class="card card-fuchsia collapsed-card">
		{% endif %}	<div class="card-header">
				<h3 class="card-title">
					DON
				</h3>
				<div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                {% if ouvert == 'don' %}
				<i class="fas fa-minus"></i>
				{% else %}
					    <i class="fas fa-plus"></i>
						{% endif %}
                  </button>
                </div>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				{{ form_start(form_don) }}
				{{ form_widget(form_don) }}

				<button class="btn btn-primary form-control">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form_don) }}
			</div>
			<!-- /.card-body -->
		</div>
	</div>
	<div class="col-4">
	{% if ouvert == 'approvisionnement' %}
	<div class="card card-success">
	{% else %}
		<div class="card card-success collapsed-card">
		{% endif %}
			<div class="card-header">
				<h3 class="card-title">
					APPROVISIONNEMENT (BANQUE)
				</h3>
				<div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                     {% if ouvert == 'approvisionnement' %}
				<i class="fas fa-minus"></i>
				{% else %}
					    <i class="fas fa-plus"></i>
						{% endif %}
                  </button>
                </div>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				{{form_start(form_app)}}
				{{ form_widget(form_app) }}
                				<button class="btn btn-primary form-control">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form_app) }}
			</div>
			<!-- /.card-body -->
		</div>

	</div>

    <div class="col-4">
	{% if ouvert == 'depense' %}
	<div class="card card-warning">
	{% else %}
		<div class="card card-warning collapsed-card">
		{% endif %}
			<div class="card-header">
				<h3 class="card-title">
					DEPENSE
				</h3>
				<div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                   {% if ouvert == 'depense' %}
				<i class="fas fa-minus"></i>
				{% else %}
					    <i class="fas fa-plus"></i>
						{% endif %}
                  </button>
                </div>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				{{form_start(form_dep)}}
				{{ form_widget(form_dep) }}
                				<button class="btn btn-primary form-control">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form_dep) }}
			</div>
			<!-- /.card-body -->
		</div>

	</div>
</div>


